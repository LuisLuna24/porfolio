---
export interface Props {
    name: string;
    link?: string;
    icon?: any;
}
const { name, link, icon } = Astro.props;
---

<a
    href={link ?? "#"}
    target={link ? "_blank" : "_self"}
    rel={link ? "noopener noreferrer" : undefined}
    class="h-10 px-5 py-2 bg-amber-600/10 rounded-full text-gray-100 font-semibold flex items-center hover:bg-amber-600 duration-300"
>
    <span class="mr-2">{icon}</span>
    <span>{name}</span>
</a>
